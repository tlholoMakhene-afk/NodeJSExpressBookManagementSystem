<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('../partials/head');  %> 
</head>
<body>
<%- include('../partials/menu');  %>
<div class="container-fluid bg-3 text-center">    
  <h3>Welcome to our library.</h3>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Available Books</h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <thead>
               <tr>
                  <td> Title </td>
                  <td> Author </td>
                  <td> Date Published</td>
                  <td> Category</td>
                  <td> Manage</td>
                </tr>  
              </thead>
              <tbody>
                <% Books.forEach((item) => { %>
                    <tr>
                    <td><%= item.title %></td>
                    <td><%= item.author %></td>
                    <td><%= item.date_of_publication %></td>
                    <td><%= item.book_category %></td>
                    <td><a href="/patch/<%= item._id %>"class="btn btn-info"><i class="fa fa-pencil-alt"></i></a><a href="/delete/<%= item._id %>" class="btn btn-warning"><i class="fa fa-trash"></i></a></td>
                    </tr>
                    <% }) %>
              </tbody>
            </table>
          </div>
        </div>
</div>


</body>
<%- include('../partials/script');  %>
</html>